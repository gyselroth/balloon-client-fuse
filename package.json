{
  "name": "balloon-client-fuse",
  "description": "mount.balloon (FUSE) for Linux, Windows and OS X",
  "main": "main.js",
  "scripts": {
    "prebuild": "tsc",
    "start": "tsc && node build/main.js",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint --fix -p tsconfig.json",
    "build": "npm run format && npm run prebuild",
    "test": "jest --coverage",
    "coveralls": "coveralls < coverage/lcov.info",
    "dist-linux": "nexe --verbose  -i build/main.js -o dist/mount.balloon-linux-x64 -t linux-x64-8.15.0",
    "dist-windows": "nexe --verbose -i build/main.js -o dist/mount.balloon-win-x64 -t windows-x64-8.15.0",
    "dist-osx": "nexe --verbose -i build/main.js -o dist/mount.balloon-osx-x64 -t mac-x64-8.15.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gyselroth/balloon-client-fuse.git"
  },
  "keywords": [
    "balloon",
    "fuse",
    "cli",
    "client"
  ],
  "author": "Raffael Sahli <sahli@gyselroth.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gyselroth/balloon-client-fuse/issues"
  },
  "homepage": "https://github.com/gyselroth/balloon-client-fuse#readme",
  "dependencies": {
    "@types/request": "^2.48.1",
    "commandpost": "^1.4.0"
  },
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "@types/node": "^10.14.7",
    "coveralls": "^3.0.3",
    "jest": "^23.6.0",
    "nexe": "3.0.0-beta.15",
    "prettier": "^1.17.1",
    "source-map-support": "^0.5.12",
    "ts-jest": "^22.4.6",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^2.9.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
